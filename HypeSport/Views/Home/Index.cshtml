@model ProductDisplayModel
@{

}

<div class="my-2">
    <form asp-action="Index" class="row row-cols-lg-auto g-3 align-items-center">

  <div class="col-12">
    <label class="visually-hidden" for="categoryId">Category</label>
    <select class="form-select" id="categoryId" name="categoryId">
      <option selected>Category</option>
        @foreach(var category in Model.Categories)
                {
                    <option selected="@(category.CategoryId == Model.CategoryId)" value="@category.CategoryId">@category.CategoryName</option>
                }
    </select>
  </div>

		<div class="col-12">
            <label class="visually-hidden" for="sterm">Search by Name</label>
            <div class="input-group">
                <div class="input-group-text"></div>
                <input type="text" class="form-control" value="@Model.STerm" id="sterm" name="sterm" placeholder="Search by Name">
            </div>
        </div>

  <div class="col-12">
    <button type="submit" class="btn btn-primary">Search</button>
    <a href="/Home/Index" type="reset" class="btn btn-dark">Reset</a>
  </div>
</form>
</div>

<div class="w-100 mt-4 d-flex flex-wrap">
    @foreach (var product in Model.Products)
    {
        <div class="card mx-2 mb-4" style="width: 15rem;">
            @if(string.IsNullOrEmpty(product.ProductImage))
            {
                <img style="width:100%;height:300px" src="/images/NoImage.png" class="card-img-top" alt="...">
            }
            else
            {
                <img style="width:100%;height:300px" src="/images/@product.ProductImage" class="card-img-top" alt="...">
            }
            <div class="card-body">
                <h5 class="card-title">@product.ProductName</h5>
                <p class="card-text">
                    Category: @product.CategoryName
                </p>
                <p>Price: @product.ProductPrice</p>
                <a href="#" class="btn btn-primary">Add to Cart</a>
            </div>
        </div>
    }
</div>
